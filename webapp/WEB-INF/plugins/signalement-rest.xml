    <version>6.5.1-SNAPSHOT</version>
    <description>module.dansmarue.rest.module.description</description>
    <documentation/>
    <installation/>
    <changes/>
    <user-guide/>
    <provider>module.dansmarue.rest.module.provider</provider>
    <provider-url>http://lutece.paris.fr</provider-url>
